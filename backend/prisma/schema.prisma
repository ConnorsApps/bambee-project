// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  name  String
  email String
}

enum TaskStatus {
  NEW
  IN_PROGRESS
  COMPLETE
}

model Task {
  id          String     @id @default(cuid())
  name        String
  createdAt   DateTime   @default(now())
  description String?
  dueBy       DateTime
  status      TaskStatus
}
